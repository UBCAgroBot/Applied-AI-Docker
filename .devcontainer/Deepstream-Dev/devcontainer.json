{
    "name": "Deepstream Dev Container",
    "image": "agrobotappliedai/deepstream-dev:latest",
    "workspaceFolder": "/home/vscode/workspace",
    "workspaceMount": "source=${localWorkspaceFolder},target=/gstreamer-pipeline-testing,type=bind", // change
    "runArgs": [
        "--privileged",
        "--network=host",
        "--runtime=nvidia",
        "--ipc=host",
        "--device=/dev/dri",
        "--device=/dev/nvmap",
        "--device=/dev/nvhost-ctrl-gpu",
        "--device=/dev/nvhost-prof-gpu",
        "--device=/dev/nvhost-gpu",
        "--device=/dev/nvhost-as-gpu"
    ],
    "mounts": [],
    "containerEnv": {
        "NVIDIA_VISIBLE_DEVICES": "all",
        "NVIDIA_DRIVER_CAPABILITIES": "compute,video,graphics,utility",
        "EGL_PLATFORM": "surfaceless",
        "GST_GL_PLATFORM": "egl",
        "GST_GL_WINDOW": "surfaceless",
        "DISPLAY": "",
        "WAYLAND_DISPLAY": "",
        "XAUTHORITY": "",
        "REMOTE_CONTAINERS_DISPLAY_SOCK": ""
    },
    "remoteEnv": {
        "DISPLAY": "",
        "WAYLAND_DISPLAY": "",
        "XAUTHORITY": "",
        "REMOTE_CONTAINERS_DISPLAY_SOCK": ""
    },
    "remoteUser": "root"
}